<%= simple_form_for(@tutor_class) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.association :tutor_booking, collection: TutorBooking.where(tutor_id: current_user.id, approved: true), label_method: :label %>
    <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
    <%= f.input :password_confirmation, required: true, label: "Confirm Password" %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
