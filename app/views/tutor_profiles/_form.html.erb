<%= simple_form_for(@tutor_profile, html: { class:'form-horizontal' }, wrapper: :horizontal_form) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :description %>
    <%= f.input :subject %>
    <%= f.input :subject_year %>
    <%= f.input :rates, label: "Rates ($AUD/hr)" %>
    <%= f.input :experience %>
    <%= f.input :qualifications %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class:"btn btn-primary" %>
  </div>
<% end %>
