<%= simple_form_for(@tutor_booking) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.hidden_field :tutor_id, value: @tutor_profile.user.id %>
    <%= f.input :date, as: :date, html5: true, required: true %>
    <%= f.input :start_time, as: :time, minute_step: 15 %>
    <%= f.input :end_time, as: :time, minute_step: 15 %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, value:"Request booking", "data-disable-with" => "Requesting...", class:"btn btn-primary" %>
  </div>
<% end %>
