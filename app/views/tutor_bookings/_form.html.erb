<%= simple_form_for(@tutor_booking) do |f| %>
  <%= f.error_notification %>
  <div class="form-inputs">
    <%= f.input :date, as: :date, start_year: Date.today.year,
                end_year: Date.today.year + 2, order:[:day, :month, :year], required: true %>
    <%= f.input :start_time, as: :time, minute_step: 15 %>
    <%= f.input :end_time, as: :time, minute_step: 15 %>
    <%= f.hidden_field :tutor_id, value: @tutor_profile.user.id %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Request booking", "data-disable-with" => "Requesting...", class:"btn btn-primary" %>
  </div>
<% end %>
