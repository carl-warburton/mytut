<%= simple_form_for(@tutor_booking) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.association :tutor_profile %>
    <%= f.association :student_profile %>
    <%= f.input :date %>
    <%= f.input :start_time %>
    <%= f.input :end_time %>
    <%= f.input :approved %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
