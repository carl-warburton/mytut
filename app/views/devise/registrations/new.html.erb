<% provide(:title, 'Sign Up') %>
<div class="row">
  <div class="col-sm-3">
    <h2>Sign up</h2>
  </div>
  <div class="col-sm-9">
    <div class="panel panel-default">
      <div class="panel-body">
        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class:'form-horizontal', multipart: :true }, wrapper: :horizontal_form ) do |f| %>
          <%= f.error_notification %>

          <div class="form-inputs">
            <%= f.input :first_name, required: true, autofocus: true %>
            <%= f.input :last_name, required: true, autofocus: true %>
            <%= f.input :avatar, label_html: {class: "col-sm-3"}, label:"Picture", as: :file %>
            <%= f.hidden_field :avatar_cache %>
            <%= f.input :email, required: true, autofocus: true %>
            <%= f.association :roles, label_html: {class: "col-sm-3"}, label:"What are you?", as: :check_boxes, collection: [Role.find(1), Role.find(2)] %>
            <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
            <%= f.input :password_confirmation, required: true, label: "Confirm Password" %>
          </div>

          <div class="form-actions">
            <%= f.button :submit, "Sign up" %>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
