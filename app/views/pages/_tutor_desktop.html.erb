<h2>Tutoring Requests:</h2>
<% if @tutorbookings.empty? %>
  <p>No students have requested your knowledge yet.</p>
<% else %>
  <h3>Approved</h3>
  <% @tutorbookings_approved.each do |b| %>
    <div class="panel panel-default">
      <div class="panel-body">
        <p><strong>Student: </strong><%= b.student.first_name %> <%= b.student.last_name%>
        <%= link_to "More Details", student_profile_url(b.student.student_profile), class:"btn btn-sm btn-info"%></p>
        <p><strong>Date: </strong><%= b.date%></p>
        <p><strong>Starts at: </strong><%= b.start_time.strftime('%H:%M') %></p>
        <p><strong>Ends at: </strong><%= b.end_time.strftime('%H:%M')%></p>
        <p><strong>Approved: </strong><%= human_boolean(b.approved) %></p>
        <p><%= link_to("Disapproved", desktop_url(booking: b.id), method: :post, class:"btn btn-sm btn-warning")%></p>
        <p><%= link_to "Archive", "#", class:"btn btn-sm btn-danger" %></p>
      </div>
    </div>
  <% end %>
  <h3>Not Approved Yet:</h3>
  <% @tutorbookings_not_approved.each do |b| %>
    <div class="panel panel-default">
      <div class="panel-body">
        <p><strong>Student: </strong><%= b.student.first_name %> <%= b.student.last_name%>
        <%= link_to "More Details", student_profile_url(b.student.student_profile), class:"btn btn-sm btn-info"%></p>
        <p><strong>Date: </strong><%= b.date%></p>
        <p><strong>Starts at: </strong><%= b.start_time.strftime('%H:%M') %></p>
        <p><strong>Ends at: </strong><%= b.end_time.strftime('%H:%M')%></p>
        <p><strong>Approved: </strong><%= human_boolean(b.approved) %></p>
        <p><%= link_to("Approved",desktop_url(booking: b.id), method: :post, class:"btn btn-sm btn-success")%></p>
        <p><%= link_to "Archive", "#", class:"btn btn-sm btn-danger" %></p>
      </div>
    </div>
  <%end %>
<% end %>
