<% provide(:title, "Tutors") %>
<div class="row">
  <div class="col-sm-4">
    <h3>Search by Name, Subjects or/and Year</h3>
  </div>
  <div class="col-sm-8">
    <div class="panel panel-default">
      <div class="panel-body">
        <%= render 'partials/search_form' %>
      </div>
    </div>
  </div>
</div>

<% if @tutor_profiles.present?  %>
  <%= render 'partials/results' %>
<% else %>
    <p>There are no tutors corresponding to your search</p>
<% end %>
